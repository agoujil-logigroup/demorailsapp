


<div class="row">
  <div class="col-sm-6">
    <h1>Declarations</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_declaration_path, class: 'btn btn-primary' do %>
    Add New Declaration
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>User</th>
            <th>Carte</th>
            <th>Projet</th>
            <th>Produit</th>
            <th>Declaration</th>
            <th>Float</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @declarations.each do |declaration| %>
        <%= content_tag :tr, id: dom_id(declaration), class: dom_class(declaration) do %>
          

                      <td><%= declaration.user_id %></td>
                      <td><%= declaration.carte %></td>
                      <td><%= declaration.projet %></td>
                      <td><%= declaration.produit %></td>
                      <td><%= declaration.declaration %></td>
                      <td><%= declaration.float %></td>
          
          
            <td><%= link_to 'Show', declaration %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
